{
    "name": "spicesquad-restful-api",
    "version": "1.0.0",
    "description": "RESTful API of the app SpiceSquad",
    "main": "build/server.js",
    "scripts": {
        "test": "jest --watchAll",
        "start": "node build/src/server.js",
        "dev": "nodemon src/server.ts",
        "build": "tsc -p . && cp ./firebase_credentials.json ./build/firebase_credentials.json",
        "build && start": "tsc -p. &&  cp ./firebase_credentials.json ./build/firebase_credentials.json && node build/src/server.js",
        "lint": "npx eslint src test",
        "lint:fix": "npm run lint -- --fix",
        "prettier": "npx prettier src test --check",
        "prettier:fix": "npm run prettier -- --write",
        "format": "npm run prettier:fix && npm run lint:fix",
        "build-docs": "typedoc --entryPointStrategy expand src/"
    },
    "keywords": [
        "node",
        "restful",
        "api",
        "spicesquad"
    ],
    "author": "Karlsruher Intellektuelle",
    "license": "MIT",
    "dependencies": {
        "@prisma/client": "^4.16.1",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "firebase": "^9.23.0",
        "firebase-admin": "^11.9.0",
        "joi": "^17.9.2",
        "morgan": "^1.10.0",
        "nodemailer": "^6.9.3",
        "prisma": "^4.16.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.17",
        "@types/nodemailer": "^6.4.8",
        "eslint": "^8.44.0",
        "jest": "^29.5.0",
        "nodemon": "^2.0.22",
        "prettier": "2.8.8",
        "ts-node": "^10.9.1",
        "typedoc": "^0.24.8",
        "typedoc-plugin-rename-defaults": "^0.6.5",
        "typescript": "^5.1.3"
    },
    "directories": {
        "test": "test",
        "doc": "docs",
        "build": "build"
    },
    "prisma": {
        "schema": "prisma/schema.prisma"
    }
}
